@model StudentEditViewModelClass

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    var photopath = "/images/" +( @Model.ExistingPhotoPath ?? "images.jpg");
}

<h2>title</h2>
<h4>Edit Employee</h4>

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post">
    <input hidden="" asp-for="@Model.Id" />
    <input hidden="" asp-for="@Model.ExistingPhotoPath" />
    <div class="form-group row">
        <label asp-for="FullName" class="control-label"></label>
        <div class="col-sm-10">
            <input asp-for="FullName" class="form-control" placeholder="FullName" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Address" class="control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" placeholder="FullName" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label">Photo</label>
        <div class="custom-file col-sm-10">
            <input asp-for="PhotoPath" class="form-control custom-file-input" />
            <label class="custom-file-label">Change Photo</label>
        </div>
    </div>
    
    <div class="form-group row">
        <img src="@photopath"/>
    </div>




    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-action="List" asp-controller="Home">Cancel</a>
    </div>

    @section Scripts{
        <script>
            $(document).ready(function () {

                $('.custom-file-input').on("change",
                    function () {
                        var fileName = $(this).val().split("\\").pop();
                        console.log(fileName);
                        $(this).next('.custom-file-label').html(fileName);
                    });


            });
        </script>

    }
</form>




